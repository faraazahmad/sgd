#!/bin/bash

if [ -f ~/.bashrc ]
then
    echo 'function g()
    {
        cd `gsgd "$1"`
    }' >> ~/.bashrc
fi

if [ -f ~/.zshrc ]
then
    echo 'function g()
    {
        cd `gsgd "$1"`
    }' >> ~/.zshrc
fi

if [ -f ~/.bash_profile ]
then
    echo 'function g()
    {
        cd `gsgd "$1"`
    }' >> ~/.bash_profile
fi

